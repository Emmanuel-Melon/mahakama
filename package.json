{
  "name": "client",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "generate:types": "openapi-typescript $VITE_API_BASE_URL/api-docs.json -o app/lib/api/types/api.ts || echo 'Type generation failed - check if backend is running'",
    "generate:types:local": "VITE_API_BASE_URL=http://localhost:3000 npm run generate:types",
    "generate:types:prod": "VITE_API_BASE_URL=https://mahakama-api-production.up.railway.app npm run generate:types",
    "dev:with-types": "npm run generate:types:local && npm run dev",
    "generate:types:safe": "openapi-typescript $VITE_API_BASE_URL/api-docs.json -o app/lib/api/types/api.ts 2>/dev/null || true",
    "dev:safe": "npm run generate:types:safe && npm run dev"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-router/node": "^7.9.2",
    "@react-router/serve": "^7.9.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express-useragent": "^1.0.15",
    "framer-motion": "^12.23.23",
    "isbot": "^5.1.31",
    "lucide-react": "^0.545.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@netlify/vite-plugin-react-router": "^1.0.1",
    "@react-router/dev": "^7.9.2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/express-useragent": "^1.0.5",
    "@types/node": "^22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "engines": {
    "node": ">=20"
  }
}
